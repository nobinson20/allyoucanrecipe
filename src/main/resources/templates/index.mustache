{{>layout/header}}

<div class="container">
    <div class="row m-5">
        <h1>Find your favorite YouTuber's recipe by ingredient's name!</h1>
    </div>
    <div class="col-md-3">
        <div class="row">
            <div class="col-md-6">
                <a href="/posts/save" role="button" class="btn btn-primary">Post recipe</a>
            </div>
        </div>
    </div>
    <!-- Show list here -->
    <div class="col-md-12">
        <table class="table table-horizontal table-bordered">
            <thead class="thead-strong">
            <tr>
                <th>Post No.</th>
                <th>Ingredient</th>
                <th>Author</th>
                <th>Last updated date</th>
            </tr>
            </thead>
            <tbody id="tbody">
            {{#posts}}
                <tr>
                    <td>{{id}}</td>
                    <td><a href="/posts/update/{{id}}">{{ingredient}}</a></td>
                    <td>{{author}}</td>
                    <td>{{modifiedDate}}</td>
                </tr>
            {{/posts}}
            </tbody>
        </table>
    </div>
</div>

{{>layout/footer}}




