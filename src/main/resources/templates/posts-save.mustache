{{>layout/header}}

<h1>Post recipes here.</h1>

<div class="col-md-12">
    <div class="col-md-4">
        <form>
            <div class="form-group">
                <label for="ingredient">Ingredient</label>
                <input type="text" class="form-control" id="ingredient" placeholder="Type ingredient">
            </div>
            <div class="form-group">
                <label for="author">Author</label>
                <input type="text" class="form-control" id="author" placeholder="Type your name">
            </div>
            <div class="form-group">
                <label for="recipes">Recipes</label>
                <textarea class="form-control" id="recipes" placeholder=
                        "ex) Kimchi Fried Rice by Roy Choi. https://youtube.com/roysgrill"></textarea>
            </div>
        </form>
        <a href="/" role="button" class="btn btn-secondary">Cancel</a>
        <button type="button" class="btn btn-primary" id="btn-save">Post</button>
    </div>
</div>
{{>layout/footer}}